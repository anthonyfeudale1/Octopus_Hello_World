step "Manual Intervention Required" {

    action {
        action_type = "Octopus.Manual"
        environments = ["Production"]
        notes = "Please verify the Production environment is ready before proceeding."
        properties = {
            Octopus.Action.Manual.BlockConcurrentDeployments = "False"
            Octopus.Action.Manual.Instructions = "Please verify the Production environment is ready before proceeding"
            Octopus.Action.Manual.ResponsibleTeamIds = "Octopus Administrators,Octopus Managers"
        }
        worker_pool_variable = ""
    }
}

step "Run the Print Hello World Script" {
    properties = {
        Octopus.Action.TargetRoles = "Hello_World_Role"
    }

    action {
        action_type = "Octopus.Script"
        properties = {
            Octopus.Action.RunOnServer = "false"
            Octopus.Action.Script.ScriptBody = <<-EOT
                Write-Host "Hello," $OctopusParameters["Helloworld.Greeting"]
                
            EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "PowerShell"
        }
    }
}